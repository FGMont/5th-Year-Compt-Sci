# My prediction is this code will not work since the "+" should be a ","
# My prediction was incorrect

alNum = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
#                  1         2         3         4         5         6
#        01234567890123456789012345678901234567890123456789012345678901
print(alNum[3])     #d
print(alNum[52:62]) #0123456789
print(alNum[51:62]) #Z0123456789
print(alNum[26:53]) #ABCDEFGHIJKLMNOPQRSTUVWXYZ0
print(alNum[0:25])  #abcdefghijklmnopqrstuvwxyz
print(alNum[1])     #b
print(alNum[5])     #f
print(alNum[26:52]) #ABCDEFGHIJKLMNOPQRSTUVWXYZ
print(alNum[26])    #A

print("2 + %d = 4"    %2)
print("2 + %d = %d"    %(2, 4))
print("%d + %d = %d"    %(2, 2, 4))
print("%d + %d = %d"    %(2, 2, 2+2))

print("%s" %3)
print("%s" %3.14)
print("%f" %3)

msg = "Hi %s. How are you?"
name = "Hal"
print(msg%name)
import math
r = 5
print("Radius: %d, Area %.2f" %(r, 2*math.pi*r))
