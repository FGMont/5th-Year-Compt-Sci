# Program to demonstrate basic slicing

# Initialise the string
pangram = "The quick brown fox jumps over the lazy dog!"
#          01234567890123456789012345678901234567890123

# Extract from index 1 up to but NOT including index 5
print(pangram[1:5]) # "he q"

# Extract from the index 17 up to but NOT including index 19
print(pangram[17:19]) # ox

print(pangram[:19])   # "The quick brown fox"
print(pangram[20:26]) # "jumps"
print(pangram[26:])   # "over the lazy dog!"
print(pangram[:])     # "The quick brown fox jumps over the lazy dog"
# name = "Mary"
# print(name[4]) The problem is indexing starts at 0. M0 A1 R2 Y3. there is no 4
# name = "Mary"
# name[3] = "k" This is a false statement. name[3] = "y"

word1 = "Leaving"
word2 = "Certificate"
word3 = "Computer"
word4 = "Science"
subjectName = word1 + word2 + word3 + word4
print(subjectName)
